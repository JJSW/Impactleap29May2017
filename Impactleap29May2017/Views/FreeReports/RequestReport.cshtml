@model Impactleap29May2017.Models.FreeReport

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="description" content="Analysis &amp; reporting solutions for environmental and social impact." />
    <meta name="keywords" content="social impact, environmental reporting, impact investing, sustainable investment, carbon reporting" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Impact analysis &amp; reporting solutions | Impactleap</title>

    <link rel="shortcut icon" href="~/img/logos/favicon.png" type="image/png">
    <link href="~/css/style_landing_May17.css" rel="stylesheet">

</head>

<body>
    <div id="body">
        <header id="header" class="header  header--alt headerfixed" name="header--alt">

            <div class="header__container3 bg-dark-gray">
                <button id="hamburger" class="hamburger">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
                <div class="header__container__row">
                    <a id="header-logo" asp-controller="Home" asp-action="Index" class="header__logo">
                        <img class="header-logo-img top" src="~/img/logos/impactleap-logo-white.png" alt="">
                        <img class="header-logo-img bottom" src="~/img/logos/impactleap-logo-gray.png" alt="">
                    </a>
                    <ul class="header__navigation">
                        <li class="header__navigation__login _hidden-mobile">
                            <a href="#" class="btn btn--link">
                                <span id="login" class="btn__label">Login</span>
                            </a>
                        </li>
                        <li class="header__navigation__login _hidden-desktop _hidden-tablet">
                            <a href="#">
                                <svg class="fa-lock" width="25" height="25" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg"><path d="M640 768h512v-192q0-106-75-181t-181-75-181 75-75 181v192zm832 96v576q0 40-28 68t-68 28h-960q-40 0-68-28t-28-68v-576q0-40 28-68t68-28h32v-192q0-184 132-316t316-132 316 132 132 316v192h32q40 0 68 28t28 68z" /></svg>
                            </a>
                        </li>
                        <li class="header__navigation__signup">
                            <a id="register" href="#" class="btn btn--register--style1">
                                Register free
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="menu-navigation">
                <img id="X" src="~/img/graphics/X2.png" />
                <ul class="menu-navigation__container">
                    <li class="menu-item">
                        <a asp-controller="Home" asp-action="Index" class="menu-navigation__logo">
                            <img class="header-logo-img2 top" src="~/img/logos/impactleap-logo-white.png" alt="">
                            <img class="header-logo-img2 bottom" src="~/img/logos/impactleap-logo-gray.png" alt="">
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="" asp-controller="Home" asp-action="OnDemand" class="menu-item__link">On-Demand</a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="" asp-controller="Home" asp-action="Advisory" class="menu-item__link">Advisory</a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="" asp-controller="Home" asp-action="Clients" class="menu-item__link">Clients</a>

                    </li>
                    <li class="menu-item">
                        <a asp-area="" asp-controller="Home" asp-action="Pricing" class="menu-item__link">Pricing</a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="" asp-controller="Home" asp-action="People" class="menu-item__link">People</a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="" asp-controller="Home" asp-action="About" class="menu-item__link">About</a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="" asp-controller="Home" asp-action="Contact" class="menu-item__link">Contact</a>
                    </li>
                    <li class="menu-item--signup">
                        <a asp-area="" asp-controller="FreeReports" asp-action="RequestReport"
                           class="btn btn--sidemenu btn--alt">Get free report</a>
                    </li>
                    <li class="menu__language-picker">
                        <div class="language-picker">
                            <div class="language-picker__select-box" name="language-picker">
                                English
                                <svg class="fa-chevron-down" width="19" height="19" viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg"><path d="M1683 808l-742 741q-19 19-45 19t-45-19l-742-741q-19-19-19-45.5t19-45.5l166-165q19-19 45-19t45 19l531 531 531-531q19-19 45-19t45 19l166 165q19 19 19 45.5t-19 45.5z" /></svg>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>

            <div class="overlay">d</div>

        </header>

        <div class="header-spacer "></div>

        <!-- <div id="modal-login-form" class="modal-block"> -->
        <div class="bg-dark-gray">
            <div class="modal-block__overlay">
                <div class="modal-block__overlay-item">
                    <div class="modal-block__spacer">
                        <div class="modal-signup-form">
                            <div class="modal-signup-form__inner">
                                <h4 class="modal-signup-form__title">Request free report</h4>
                                <!-- <small class="modal-signup-form__subtitle">Please enter your details below and we will be in contact with you shortly.</small> -->
                                <small class="modal-signup-form__subtitle">Please enter your details and we will contact you shortly.</small>
                                <form asp-action="RequestReport" class="signup-form signup-form--responsive signup-form--theme--embedded">
                                    <div asp-validation-summary="ModelOnly" class="signup-form__error signup-form__error--no-min-height"></div>
                                    <div class="signup-form__items-wrapper">
                                        <div class="signup-form__item">
                                            <div class="signup-form__input-wrapper">
                                                <input asp-for="Name" 
                                                       id="signupInputUser"
                                                       class="signup-form__input"
                                                       placeholder="Enter name" />
                                            </div>
                                        </div>
                                        <span asp-validation-for="Name" class="signup-form__error"></span>
                                        <div class="signup-form__item">
                                            <div class="signup-form__input-wrapper">
                                                <input asp-for="Email"
                                                       id="signupInputEnvelope"
                                                       class="signup-form__input"
                                                       placeholder="Your email" />
                                            </div>
                                        </div>
                                        <span asp-validation-for="Email" class="signup-form__error"></span>
                                        <div class="signup-form__item">
                                            <div class="signup-form__input-wrapper">
                                                <input asp-for="Company"
                                                       id="signupInputCompany"
                                                       class="signup-form__input"
                                                       placeholder="Company (if applicable)" />
                                            </div>
                                        </div>
                                        <span asp-validation-for="Company" class="signup-form__error"></span>
                                        <div class="signup-form__item">
                                            <div class="signup-form__button">
                                                <button type="submit" class="btn btn--primary btn--xl btn--fluid">
                                                    Request report
                                                </button>
                                            </div>
                                            <div class="signup-form__error signup-form__error--no-min-height"></div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>


        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

        <footer class="footer bg-dark-gray">
            <div class="block-container">
                <div class="footer__inner">
                    <div class="footer__bottom">
                        <ul class="footer__bottom__links">
                            <li class="text small text-white">� 2017 Impactleap</li>
                            <li class="small">
                                <a href="#" rel="nofollow">Terms of Service</a>
                            </li>
                            <li class="small">
                                <a href="#" rel="nofollow">Privacy Policy</a>
                            </li>
                        </ul>
                        <div class="footer__bottom__what-it-does">
                            <p>
                                <small class="text-white">Impactleap provides impact analysis solutions.</small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        <!-- modal sections to insert here -->

    </div>

    <!-- js scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/js/header.js"></script>
    <script src="~/js/modal.js"></script>

    <script>
        (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
