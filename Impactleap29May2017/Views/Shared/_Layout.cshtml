@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="description" content="Analysis &amp; reporting solutions for environmental and social impact." />
    <meta name="keywords" content="social impact, environmental reporting, impact investing, sustainable investment, carbon reporting" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] | Impactleap</title>

    <link rel="shortcut icon" href="~/img/logos/favicon.png" type="image/png">
    <link href="~/css/style_landing_May17.css" rel="stylesheet">

    @*<environment names="Development">
        <link rel="shortcut icon" href="img/logos/favicon.png" type="image/png">
